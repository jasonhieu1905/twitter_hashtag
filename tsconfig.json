{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "baseUrl": "src",
        "paths": {
            "@shared/*": [
                "app/shared/*"
            ]
        },
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "exclude": [
        "../node_modules",
        "./dist"
    ],
    "awesomeTypescriptLoaderOptions": {
        "forkChecker"   : true,
        "useWebpackText": true
    },
    "buildOnSave"  : false
}